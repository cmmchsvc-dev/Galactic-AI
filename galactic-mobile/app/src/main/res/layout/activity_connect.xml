<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GALACTIC AI"
            android:textColor="@color/cyan"
            android:textSize="26sp"
            android:textStyle="bold"
            android:letterSpacing="0.25"
            android:fontFamily="sans-serif-condensed"
            android:shadowColor="@color/cyan"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="18"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILE"
            android:textColor="@color/pink"
            android:textSize="13sp"
            android:textStyle="bold"
            android:letterSpacing="0.4"
            android:layout_marginBottom="32dp" />

        <!-- Status indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <View
                android:id="@+id/status_dot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/status_dot_offline" />

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not connected"
                android:textColor="@color/text_dim"
                android:textSize="12sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Server Host -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server Address"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/input_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="192.168.1.100"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_dim"
            android:textSize="15sp"
            android:background="@drawable/input_bg"
            android:inputType="textUri"
            android:singleLine="true"
            android:layout_marginBottom="12dp" />

        <!-- Port -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Port"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/input_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="17789"
            android:text="17789"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_dim"
            android:textSize="15sp"
            android:background="@drawable/input_bg"
            android:inputType="number"
            android:singleLine="true"
            android:layout_marginBottom="12dp" />

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Passphrase"
            android:textColor="@color/text_dim"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter passphrase"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_dim"
            android:textSize="15sp"
            android:background="@drawable/input_bg"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_marginBottom="16dp" />

        <!-- Toggles -->
        <CheckBox
            android:id="@+id/toggle_https"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use HTTPS (recommended)"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:checked="true"
            android:buttonTint="@color/cyan"
            android:layout_marginBottom="6dp" />

        <CheckBox
            android:id="@+id/toggle_biometric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Require biometric/PIN to open app"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:buttonTint="@color/cyan"
            android:layout_marginBottom="6dp" />

        <CheckBox
            android:id="@+id/toggle_auto_speak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto-speak AI responses"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:buttonTint="@color/cyan"
            android:layout_marginBottom="20dp" />

        <!-- Error text -->
        <TextView
            android:id="@+id/error_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="13sp"
            android:visibility="gone"
            android:layout_marginBottom="12dp" />

        <!-- Connect button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_connect"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="CONNECT"
            android:textColor="#FF000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:letterSpacing="0.1"
            android:background="@drawable/btn_gradient"
            android:layout_marginBottom="14dp"
            android:stateListAnimator="@null" />

        <!-- QR Scan button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_scan_qr"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ“·  SCAN QR CODE"
            android:textColor="@color/cyan"
            android:textSize="14sp"
            android:letterSpacing="0.05"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="24dp"
            android:stateListAnimator="@null" />

    </LinearLayout>
</ScrollView>
